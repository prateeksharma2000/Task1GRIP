<h1 class="text-center font-weight-bold mb-2" style="margin:2rem 0 2rem 0">Transfer</h1>
<div style="margin: 0 5rem 0 5rem;">
<form action="/transfer" method="POST">
    <input type="hidden" name="fromCustomer" value="<%=id%>">
    <label for="reciever" class="mb-2 mt-2" style="font-size: 2rem;">Transfer To</label>
    <select name="toCustomer" id="reciever" class="custom-select custom-select-lg mb-4">
        <% for(customer of customerList){%>
            <option value="<%= customer._id%>"><%= customer.name%></option>
        <%}%>
    </select>
    <div class="form-group">
        <label for="amount" class="mb-2 mt-2" style="font-size: 2rem;">Amount</label>
        <input type="number" class="form-control mb-4 form-control-lg" id="amount" name="transferAmount" placeholder="Enter Amount" required>
    </div>
    <button class="btn btn-primary btn-lg" type="submit">Transfer</button> 
</form>
</div>